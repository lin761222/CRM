<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>cpaaa</param-name>
        <param-value>aaaa</param-value>
    </context-param>
    <context-param>
        <param-name>cpbbb</param-name>
        <param-value>bbbb</param-value>
    </context-param>
    <context-param>
        <param-name>cpccc</param-name>
        <param-value>cccc</param-value>
    </context-param>
    <context-param>
        <param-name>filePath</param-name>
        <param-value>/WEB-INF/data/product.txt</param-value>
    </context-param>
    <filter>
        <filter-name>coding</filter-name>
        <filter-class>com.uuu.web.EncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>utf-8</param-value>
        </init-param>
    </filter>
    <filter>
        <filter-name>PerformanceFilter</filter-name>
        <filter-class>com.uuu.web.PerformanceFilter</filter-class>
        <init-param>
            <param-name>prefix</param-name>
            <param-value>**Performance**</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>PerformanceFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>coding</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
        <dispatcher>ERROR</dispatcher>
    </filter-mapping>
    <listener>
        <description>ServletContextListener</description>
        <listener-class>com.uuu.web.OpenCloseListener</listener-class>
    </listener>
    <listener>
        <description>ServletContextAttributeListener</description>
        <listener-class>com.uuu.web.ApplicationScopeListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>NTNServlet</servlet-name>
        <servlet-class>com.uuu.view.NTNServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateCustomerServlet</servlet-name>
        <servlet-class>com.uuu.controller.CreateCustomerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TroubleServlet</servlet-name>
        <servlet-class>com.uuu.view.TroubleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NTNServlet</servlet-name>
        <url-pattern>/ntn.view</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DumpServlet</servlet-name>
        <servlet-class>com.uuu.view.DumpServlet</servlet-class>
        <init-param>
            <param-name>ipaaa</param-name>
            <param-value>aaa</param-value>
        </init-param>
        <init-param>
            <param-name>ipbbb</param-name>
            <param-value>bbb</param-value>
        </init-param>
        <init-param>
            <param-name>ipccc</param-name>
            <param-value>ccc</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>DumpServlet</servlet-name>
        <url-pattern>/dump.view</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateCustomerServlet</servlet-name>
        <url-pattern>/customer/ccController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TroubleServlet</servlet-name>
        <url-pattern>/troub.php</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>404</error-code>
        <location>/error/handle404.jsp</location>
    </error-page>
    <error-page>
        <exception-type>com.uuu.model.CRMException</exception-type>
        <location>/error/error.jsp</location>
    </error-page>
    <security-constraint>
        <display-name>admin</display-name>
        <web-resource-collection>
            <web-resource-name>admin</web-resource-name>
            <description/>
            <url-pattern>/admin/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>mis</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>for process login</display-name>
        <web-resource-collection>
            <web-resource-name>for login</web-resource-name>
            <description>for login</description>
            <url-pattern>/login/processLogin.jsp</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>mis</role-name>
            <role-name>member</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>for customer maintain</display-name>
        <web-resource-collection>
            <web-resource-name>maintain customer</web-resource-name>
            <description>maintain customer</description>
            <url-pattern>/customer/maintain/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>member</role-name>
            <role-name>mis</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>admin</realm-name>
        <form-login-config>
            <form-login-page>/login/login.jsp</form-login-page>
            <form-error-page>/login/loginFail.jsp</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description/>
        <role-name>mis</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>member</role-name>
    </security-role>
    <resource-ref>
        <res-ref-name>jdbc/crmDB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>
